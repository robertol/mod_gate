#!/usr/bin/make -f
version=2.0.5
major=2

configure: configure-stamp
configure-stamp:
	dh_testdir

    # Build makefiles for entire project
	cmake .

	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp 
	dh_testdir

    # mod_mod-jerk: clean build from mod-jerk-dev and make new mod_rso.so
	cd src && $(MAKE)

clean:
	dh_testdir
	dh_testroot
    # Build makefiles for entire project
	cmake .
	rm -f build-stamp configure-stamp
	rm -rf debian/mod-jerk
	rm -rf debian/mod-jerk-git
	rm -rf CMakeFiles
	rm -rf CMakeCache.txt

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	dh_installchangelogs 

	#---------------------------------------------------------------------------
	# mod-jerk
	#---------------------------------------------------------------------------

	cd src && $(MAKE) DESTDIR=$(CURDIR)/debian/mod-jerk install
	mkdir -p $(CURDIR)/debian/mod-jerk/etc/apache2/mods-available
	cp debian/config/mod_jerk.conf $(CURDIR)/debian/mod-jerk/etc/apache2/mods-available/jerk.conf
	cp debian/config/mod_jerk.load $(CURDIR)/debian/mod-jerk/etc/apache2/mods-available/jerk.load

	#---------------------------------------------------------------------------
	# mod-jerk-git
	#---------------------------------------------------------------------------

	cd $(CURDIR)/debian/mod-jerk-git &&    \
       $(CURDIR)/debian/scripts/gitlink.sh \
       $(CURDIR)/debian/mod_jerk-git.gitmap mod_jerk

	dh_installdocs

binary-indep: build install
# We have nothing to do by default.

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
